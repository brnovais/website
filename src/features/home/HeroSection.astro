---
import ArrowLongRightIcon from '@components/icons/heroicons/ArrowLongRightIcon.astro';
---

<section
  class="container
          relative
          mx-auto
          overflow-hidden
          py-40
          md:py-48
          xl:py-60"
>
  <div
    class="relative
            z-10
            bg-light
            px-4
            py-8
            text-center
            dark:bg-dark
            md:px-6
            md:text-left
            lg:bg-transparent
            xl:px-8"
  >
    <span
      class="block
              font-montserrat
              text-4xl
              font-bold
              md:text-5xl
              xl:text-6xl"
    >
      Ajudando a
      <span class="text-5xl text-brand md:text-6xl xl:text-7xl">
        criar
        <br class="hidden md:inline" />
        um mundo
      </span>
      melhor
    </span>

    <span
      class="font-lora
              text-xl
              tracking-widest
              md:text-2xl
              xl:text-3xl"
    >
      <ArrowLongRightIcon className="inline size-5" />
      uma instrução por vez
    </span>
  </div>

  <div
    class="absolute
            -right-20
            bottom-20
            -rotate-45
            text-6xl
            opacity-10
            dark:opacity-20
            md:text-7xl
            xl:text-8xl"
  >
    mov ecx,hello
    <br />
    mov edx,len
    <br />
    mov eax,4
    <br />
    mov ebx,1
    <br />
    int 0x80
  </div>
</section>
